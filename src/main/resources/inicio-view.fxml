<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<Pane fx:id="content_container" prefHeight="832.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bella_italia.controllers.InicioController">
    <!-- Background Pane -->
    <Pane fx:id="_bg__inicio" prefHeight="832.0" prefWidth="1280.0" style="-fx-background-color: #AAAAAA;" />

    <!-- Background Image -->
    <ImageView fx:id="fondoInicio" fitHeight="832.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true" >
        <image>
            <Image url="fondo_tres_pizzas.png" />
        </image>
    </ImageView>

    <!-- Opacity Image -->
    <ImageView id="opacidad" fitHeight="832.0" fitWidth="1280.0" pickOnBounds="true">
        <image>
            <Image url="opacidad.png" />
        </image>
    </ImageView>

    <!-- Login Background Pane -->
    <Pane fx:id="fondoIniciarSesion" layoutX="390.0" layoutY="223.0" prefHeight="420.0" prefWidth="493.0" style="-fx-background-color: rgba(254,249,244,1); -fx-background-radius: 10px;" />

    <!-- Register Label -->
    <Label fx:id="_registrarme" onMouseClicked="#handleRegistroClick" alignment="CENTER" layoutX="467.0" layoutY="602.0" prefHeight="40.0" prefWidth="355.0" style="-fx-text-alignment: center;" text="Registrarme" textAlignment="CENTER">
        <font>
            <Font name="Rufina" size="20.0" />
        </font>
        <textFill>
            <Color fx:value="#A19191" />
        </textFill>
    </Label>

    <!-- Login Title Label -->
    <Label fx:id="iniciarSesion" alignment="CENTER" layoutX="453.0" layoutY="245.0" prefHeight="86.0" prefWidth="387.0" style="-fx-text-alignment: center;" text="Iniciar sesión">
        <font>
            <Font name="Rufina" size="50.0" />
        </font>
        <textFill>
            <Color fx:constant="BLACK" />
        </textFill>
    </Label>

    <!-- Email Input TextField -->
    <TextField fx:id="cuadroEmail" layoutX="461.0" layoutY="348.0" prefHeight="55.0" prefWidth="357.0" promptText="Email o número de teléfono" style="-fx-background-color: rgba(255,248,248,1); -fx-background-radius: 20px; -fx-border-color: black;" />

    <!-- Password Input TextField -->
    <PasswordField fx:id="cuadroContrasena" layoutX="461.0" layoutY="429.0" prefHeight="55.0" prefWidth="357.0" promptText="Contraseña" style="-fx-background-color: rgba(255,248,248,1); -fx-background-radius: 20px; -fx-border-color: black;" />


    <!-- Login Button Pane -->
    <Pane fx:id="botonAcceder1" layoutX="517.0" layoutY="532.0" onMouseClicked="#handleButtonClick" prefHeight="55.0" prefWidth="245.0" style="-fx-background-color: rgba(248,127,19,1); -fx-background-radius: 20px;">
        <children>
            <Label alignment="CENTER" layoutX="-11.0" layoutY="-10.0" prefHeight="76.0" prefWidth="268.0" style="-fx-text-alignment: center;" text="Acceder" textAlignment="CENTER">
                <font>
                    <Font name="Rufina" size="36.0" />
                </font>
                <textFill>
                    <Color fx:constant="WHITE" />
                </textFill>
            </Label>
        </children>
    </Pane>
</Pane>
